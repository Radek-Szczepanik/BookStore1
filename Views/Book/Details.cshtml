@model Book

<div class="create">
    <h1>Szczegóły Książki</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="textLabel" asp-for="Description">Opis</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="textLabel" asp-for="NumberOfPages">Ilość stron</label>
                <input asp-for="NumberOfPages" class="form-control" />
                <span asp-validation-for="NumberOfPages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="textLabel" asp-for="ReleaseDate">Data Wydania</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success mr-2" style="margin-top: 30px; margin-left: 65px">Edycja</a>
                <a asp-action="Index" class="btn btn-info" style="margin-top: 30px">Powrót</a>

            </div>
        </div>
    </div>
</div>
