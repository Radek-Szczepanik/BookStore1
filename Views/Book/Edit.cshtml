@model Book

<div class="create">
    <h1>Edytuj Książkę</h1>
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-12">
                <div class="form-group">
                    <label class="textLabel" asp-for="Title">Tytuł</label>
                    <input asp-for="Title" class="form-control /">
                    <span asp-validation-for="Title" class="text-danger" id="textDanger"></span>
                </div>
                <div class="form-group">
                    <label class="textLabel" asp-for="Author">Autor</label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger" id="textDanger"></span>
                </div>
                <div class="form-group">
                    <label class="textLabel" asp-for="Description">Opis</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger" id="textDanger"></span>
                </div>
                <div class="form-group">
                    <label class="textLabel" asp-for="NumberOfPages">Ilość stron</label>
                    <input asp-for="NumberOfPages" class="form-control" />
                    <span asp-validation-for="NumberOfPages" class="text-danger" id="textDanger"></span>
                </div>
                <div class="form-group">
                    <label class="textLabel" asp-for="ReleaseDate">Data wydania</label>
                    <input asp-for="ReleaseDate" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger" id="textDanger"></span>
                </div>

                <div class="form-group" id="buttons">
                    <input type="submit" value="Zatwierdź" class="btn btn-success mr-2" style="margin-top:30px" />
                    <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
                </div>
            </div>
        </form>
    </div>
</div>
