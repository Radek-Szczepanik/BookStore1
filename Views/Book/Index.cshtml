@model IEnumerable<Book>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł Książki</th>

            <th>
                <a asp-action="Create" class="btn btn-info btn-sm">Dodaj nową książkę</a>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm" style="margin-bottom:3px">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="margin-bottom:3px">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

